@inherits LayoutComponentBase

<div class="layout">
    <div class="header">
        <h1>Create Shopping List</h1>
        <div>
            <a>@today.ToString("dddd, dd MMMM yyyy")</a>
        </div>
    </div>

    

    <div class="sidebar">
        <NavMenu></NavMenu>
    </div>

    <div class="content">
        <p>@Body</p>
    </div>

    <div class="footer">
        @footerMessage
    </div>

</div>
    

@code {
    DateTime today = DateTime.Today;

    public string footerMessage { get; set; } = "Amazing Custom Layout Footer For Shopping List";

}
